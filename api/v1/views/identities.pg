collection :identities => identities do |identity|
  if identity
    node :identity => identity do
      attributes :id, :god
      node :realm => identity.realm.label
    end

    node :accounts => identity.accounts.map(&:provider)

    if identity.primary_account
      node :profile => identity.primary_account do
        attributes :provider, :nickname, :name, :profile_url, :image_url, :description
      end
    end
  else
    node :identity => {}
  end
end
